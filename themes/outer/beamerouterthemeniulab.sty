\mode<presentation>

\ifbeamer@secheader
  \useoutertheme{infolines}
\else
  \useoutertheme{default}
\fi

% frametitle tweak
\setbeamertemplate{frametitle}
{
\ifbeamer@secheader\vskip-.2ex\else\vskip+.8ex\fi
\begin{centering}
  \insertframetitle\par
  % subtitle stuff taken from beamerouterthemedefault.sty
  {%
  \ifx\insertframesubtitle\@empty%
  \else%
  {\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\insertframesubtitle\strut\par}%
  \fi
  }%
\end{centering}
}

\setbeamertemplate{footline}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=\paperwidth,ht=2.25ex,dp=1ex,right]{page number in head/foot}%
    \ifbeamer@onlycurpagenum
      \insertframenumber{}\hspace*{2ex}
    \else
      \insertframenumber{} / \inserttotalframenumber\hspace*{2ex}
    \fi
  \end{beamercolorbox}}%
  \vskip0pt%
}

\mode
<all>
